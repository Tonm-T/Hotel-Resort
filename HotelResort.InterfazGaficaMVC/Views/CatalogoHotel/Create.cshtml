@model HotelResort.EntidadDeNegocio.CatalogoHotel

@{
    ViewData["Title"] = "Create";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

<h1>Create nueva Catalogo de una Habitacion</h1>

<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" class="form-control" />

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Fotos de la Habitacion</label>
                <input asp-for="imagen" class="form-control" placeholder="Link de la imagen" />
                <span asp-validation-for="imagen" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Nombre y Clase de Habitacion</label>
                <input asp-for="ClaseHabitacion" class="form-control" />
                <span asp-validation-for="ClaseHabitacion" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Detalles" class="control-label"></label>
                <input asp-for="Detalles" class="form-control" />
                <span asp-validation-for="Detalles" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Precio de la Habitacion</label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Numero de Habitacion</label>
                <input asp-for="NumHabitacion" class="form-control" />
                <span asp-validation-for="NumHabitacion" class="text-danger"></span>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-success" /> |
                <a asp-action="Index" class="btn btn-outline-warning">Regresar ala Lista</a>
            </div>

        </div>
        <span class="text-danger">@ViewBag.Error</span>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
