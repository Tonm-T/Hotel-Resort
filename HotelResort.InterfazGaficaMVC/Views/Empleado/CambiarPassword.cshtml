@model HotelResort.EntidadDeNegocio.Empleado

@{
    ViewData["Title"] = "CambiarPassword";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body class=" d-flex align-items-center vh-100">
    @*clase para justificar texto y justificar el contenedor*@
    <div class="modal-dialog text-center">
        @*justificar col-sm-15 para todo el contenido de tamaño*@
        <div class="col-sm-13 main-section">
            @*tamaño del contenedor*@
            <div class="modal-content p-sm-5 p-xxl-5 g-5">
                <h1>Modificar Usuario</h1>
                <form asp-action="CambiarPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" class="form-control" />
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Dui" class="control-label"></label>
                                <input asp-for="Dui" class="form-control" disabled />
                                <span asp-validation-for="Dui" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Clave actual</label>
                                <input type="password" name="pPasswordAnt" class="form-control" required />
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="control-label">Nuevo Clave del Empleado</label>
                                <input asp-for="ClaveEmpleado" class="form-control" />
                                <span asp-validation-for="ClaveEmpleado" class="text-danger"></span>
                            </div>
                            <br />
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="confirmClaveEmpleado_aux" class="control-label"></label>
                                <input asp-for="confirmClaveEmpleado_aux" class="form-control" />
                                <span asp-validation-for="confirmClaveEmpleado_aux" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                        <div class="col-md-12">
                            <div class="form-group text-center">
                                <input type="submit" value="Cambiar password" class="btn btn-outline-info" />  | 
                                <a href="/AdminLogin" class="text-center btn btn-outline-info">Regresar</a>
                            </div>
                            <span class="text-danger">@ViewBag.Error</span>
                        </div>
                </form>
            </div>
        </div>
        </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            $("form input[name]").trigger("blur");
        });
    </script>
}
