@model HotelResort.EntidadDeNegocio.Empleado

@{
    ViewData["Title"] = "CambiarPassword";
}

<body class="bg-secondary d-flex align-items-center vh-100">
    @*clase para justificar texto y justificar el contenedor*@
    <div class="modal-dialog justify-content-center">
        @*justificar col-sm-15 para todo el contenido de tamaño*@
        <div class="col-sm-13 main-section">
            @*tamaño del contenedor*@
            <div class="modal-content p-sm-5 p-xxl-8 border-danger border-3">
                <div class="text-center">
                <h1 class="text-center">Modificar Clave Empleado</h1>
                <form asp-action="CambiarPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" class="form-control" />
                    <div class="row justify-content-center">
                        <div class="col-md-4 gx-5">
                            <div class="form-group">
                                <label class="control-label">DUI</label>
                                <input asp-for="Dui" class="form-control" disabled />
                                <span asp-validation-for="Dui" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-4 gx-5">
                            <div class="form-group">
                                <label class="control-label">Clave actual</label>
                                <input type="password" name="pPasswordAnt" class="form-control" required />
                               
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row justify-content-center">
                        <div class="col-md-4 gx-5">
                            <div class="form-group">
                                <label class="control-label">Nuevo Clave del Empleado</label>
                                <input asp-for="ClaveEmpleado" class="form-control" />
                                <span asp-validation-for="ClaveEmpleado" class="text-danger"></span>
                            </div>
                            <br />
                        </div>
                        <div class="col-md-4 gx-5">
                            <div class="form-group">
                                <label asp-for="confirmClaveEmpleado_aux" class="control-label"></label>
                                <input asp-for="confirmClaveEmpleado_aux" class="form-control" />
                                <span asp-validation-for="confirmClaveEmpleado_aux" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                        <div class="col-md-12">
                            <div class="form-group text-center">
                                <input type="submit" value="Cambiar password" class="btn btn-outline-info" />  | 
                                <a href="/AdminLogin" class="text-center btn btn-outline-info">Regresar</a>
                            </div>
                            <span class="text-danger">@ViewBag.Error</span>
                        </div>
                </form>
            </div>
        </div>
        </div>
        </div>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            $("form input[name]").trigger("blur");
        });
    </script>
}
