@model HotelResort.EntidadDeNegocio.Empleado

@{
    ViewData["Title"] = "Eliminar";
}
<body class="bg-secondary d-flex align-items-center vh-50">
    @*clase para justificar texto y justificar el contenedor*@
    <div class="modal-dialog justify-content-center">
        <div class="col-md-25">
            <div class="modal-content p-sm-5 p-xxl-8 border-danger border-5">
                <h1>Eliminar el registro del Empleado</h1>
                <h5>Estas seguro de eliminar el registro de forma permanente ❌📛?</h5>
                <div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2 text-danger">
                            @Html.DisplayNameFor(model => model.Nombre):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-2 text-danger">
                            @Html.DisplayNameFor(model => model.Apellido):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Apellido)
                        </dd>
                        <dt class="col-sm-2 text-danger">
                            @Html.DisplayNameFor(model => model.Email):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2 text-danger">
                            @Html.DisplayNameFor(model => model.Movil):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Movil)
                        </dd>
                        <dt class="col-sm-2 text-danger">
                            @Html.DisplayNameFor(model => model.Direccion):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Direccion)
                        </dd>
                        <dt class="col-sm-2 text-danger">
                            @Html.DisplayNameFor(model => model.Dui):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Dui)
                        </dd>
                        <dt class="col-sm-2 text-danger">
                            @Html.DisplayNameFor(model => model.ClaveEmpleado):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ClaveEmpleado)
                        </dd>
                        <dt class="col-sm-5 text-danger">
                            @Html.DisplayNameFor(model => model.FechaRegistro):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FechaRegistro)
                        </dd>
                        <dt class="col-sm-2 text-danger">
                            @Html.DisplayNameFor(model => model.TipoCargo):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TipoCargoId)
                        </dd>

                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Eliminar" class="btn btn-outline-danger" /> |
                        <a asp-action="Index" class="btn btn-outline-warning">Regresar ala Lista</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
