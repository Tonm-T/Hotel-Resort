@model HotelResort.EntidadDeNegocio.Reservacion

@{
    ViewData["Title"] = "Details";
}

<body class="bg-secondary d-flex align-items-center vh-50">
    @*clase para justificar texto y justificar el contenedor*@
    <div class="modal-dialog justify-content-center">
        <div class="col-md-25">
            <div class="modal-content p-sm-5 p-xxl-8 border-info border-3">
                <h2 class="text-info">Detalles Reservacion, Cliente.</h2>
                <div>
                    <hr />
                    <dl class="row ">
                        <dt class="col-sm-2 text-success">
                            @Html.DisplayNameFor(model => model.Nombre):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-2 text-success">
                            @Html.DisplayNameFor(model => model.Apellido):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Apellido)
                        </dd>
                        <dt class="col-sm-2 text-success">
                            @Html.DisplayNameFor(model => model.Email):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-2 text-success">
                            @Html.DisplayNameFor(model => model.NIdentidad):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NIdentidad)
                        </dd>
                        <dt class="col-sm-2 text-success">
                            @Html.DisplayNameFor(model => model.Movil):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Movil)
                        </dd>
                        <dt class="col-sm-2 text-success">
                            @Html.DisplayNameFor(model => model.NHabitacion):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NHabitacion)
                        </dd>
                        <dt class="col-sm-2 text-success">
                            @Html.DisplayNameFor(model => model.FyHRegistro):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FyHRegistro)
                        </dd>
                        <dt class="col-sm-2 text-success">
                            @Html.DisplayNameFor(model => model.FyHEntrada):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FyHEntrada)
                        </dd>
                        <dt class="col-sm-2 text-success">
                            @Html.DisplayNameFor(model => model.FyHSalida):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FyHSalida)
                        </dd>

                    </dl>
                    @Html.ActionLink("Modificar", "Edit", new {  id = Model.Id }, new {@class = "btn btn-outline-primary"}) |
                    <a asp-action="Index" class="btn btn-outline-warning">Regresar ala Lista</a>
                </div>
            </div>
        </div>
    </div>
</body>
