@model HotelResort.EntidadDeNegocio.Reservacion

@{
    ViewData["Title"] = "Create";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

<h1 class="text-center">Crear nueva reservacion</h1>
<hr />
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" class="form-control" />

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="NIdentidad" class="control-label"></label>
                <input asp-for="NIdentidad" class="form-control" />
                <span asp-validation-for="NIdentidad" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Movil" class="control-label"></label>
                <input asp-for="Movil" class="form-control" />
                <span asp-validation-for="Movil" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="NHabitacion" class="control-label"></label>
                <input asp-for="NHabitacion" class="form-control" />
                <span asp-validation-for="NHabitacion" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="PHabitacion" class="control-label"></label>
                <input asp-for="PHabitacion" class="form-control" />
                <span asp-validation-for="PHabitacion" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="FyHRegistro" class="control-label"></label>
                <input asp-for="FyHRegistro" class="form-control" />
                <span asp-validation-for="FyHRegistro" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="FyHEntrada" class="control-label"></label>
                <input asp-for="FyHEntrada" class="form-control" />
                <span asp-validation-for="FyHEntrada" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="FyHSalida" class="control-label"></label>
                <input asp-for="FyHSalida" class="form-control" />
                <span asp-validation-for="FyHSalida" class="text-danger"></span>
            </div>
        </div>
    </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Guardar" class="btn btn-outline-success" /> |
            <a asp-action="Index" class="btn btn-outline-warning">Regresar ala Lista</a>
        <span class="text-danger">@ViewBag.Error</span>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
