@model HotelResort.EntidadDeNegocio.TipoCargo

@{
    ViewData["Title"] = "Modificar";
}
<body class="bg-secondary d-flex align-items-center vh-50">
    @*clase para justificar texto y justificar el contenedor*@
    <div class="modal-dialog justify-content-center">
        <div class="col-md-25">
            <div class="modal-content p-sm-5 p-xxl-8 border-info border-3">
                <h2>Modificar el tipo de Cargo</h2>
                <hr />

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-10">
                            <div class="form-group">
                                <label asp-for="Cargo" class="control-label"></label>
                                <input asp-for="Cargo" class="form-control" />
                                <span asp-validation-for="Cargo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Guardar cambios" class="btn btn-outline-success" /> |
                        <a asp-action="Index" class="btn btn-outline-warning">Regresar ala Lista</a>
                    </div>
                    <span class="text-danger">@ViewBag.Error</span>
                </form>

            </div>
        </div>
    </div>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
