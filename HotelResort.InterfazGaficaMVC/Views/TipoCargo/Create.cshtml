@model HotelResort.EntidadDeNegocio.TipoCargo

@{
    ViewData["Title"] = "Crear";
}
<body class="bg-secondary d-flex align-items-center vh-50">
    @*clase para justificar texto y justificar el contenedor*@
    <div class="modal-dialog justify-content-center">
        <div class="col-md-25">
            <div class="modal-content p-sm-5 p-xxl-8 border-danger border-5">
                <h1>Crear Nuevo Cargo</h1>
                <hr />

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="control-label">Escribe un Tipo de Cargo</label>
                                <input asp-for="Cargo" class="form-control" />
                                <span asp-validation-for="Cargo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-outline-success" /> |
                        <a asp-action="Index" class="btn btn-outline-warning">Regresar ala Lista</a>
                    </div>
                    <span class="text-danger">@ViewBag.Error</span>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
