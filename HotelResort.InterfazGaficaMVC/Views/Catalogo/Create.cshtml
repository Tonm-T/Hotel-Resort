@model HotelResort.EntidadDeNegocio.Reservacion

@{
    ViewData["Title"] = "Create";
}

<h1>Create nuevo reservacion</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Numero de Identidad</label>
                <input asp-for="NIdentidad" class="form-control" />
                <span asp-validation-for="NIdentidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movil" class="control-label"></label>
                <input asp-for="Movil" class="form-control" />
                <span asp-validation-for="Movil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Numero de Habitacion</label>
                <input asp-for="NHabitacion" class="form-control" />
                <span asp-validation-for="NHabitacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Precio de Habitacion</label>
                <input asp-for="PHabitacion" class="form-control" />
                <span asp-validation-for="PHabitacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha y Hora del Registro</label>
                <input asp-for="FyHRegistro" class="form-control" />
                <span asp-validation-for="FyHRegistro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha y Hora de Entrada ala Habitacion</label>
                <input asp-for="FyHEntrada" class="form-control" />
                <span asp-validation-for="FyHEntrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha y Hora de Salida de la Habitacion</label>
                <input asp-for="FyHSalida" class="form-control" />
                <span asp-validation-for="FyHSalida" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-success" /> ||
                <a asp-action="Index" class="btn btn-outline-warning">Regresar</a>
            </div>
            <span class="text-danger">@ViewBag.Error</span>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
